		script(type="text/javascript")
			var nextURL = "#{nextURL}" || ""
			$(function() {
				$("body").animate({
						backgroundColor:"#999"
					}, 2000, "linear", function() {
						//wait a couple of seconds
						window.setTimeout( function() {
							$(".prompt").fadeIn("slow");
						}, 1000);
						//load nextURL
						
						if (nextURL != "")
							changePage(nextURL);
					});
			});
			
			function changePage(url, method, data) 
			{
				//run method
				if ("onPageOut" in window)
				{
					onPageOut();
				}

				//fade out
				$("body").animate({
						backgroundColor:"#000"
					}, 2000, "swing", function() {

						//load URL
						ajaxRequest(url, method, data);
						
					});
			}
			
			function updatePageUI(returnedData) 
			{
				//if string, just replace content
				if (typeof returnedData == "string")
				{
					$("#content").html(returnedData);
				}
				else
				{
					if (returnedData.html)
					{
						$("#content").html(returnedData.html);
					}
					if (returnedData.js)
					{
						eval(returnedData.js);
					}
				}
				$("body").animate({
						backgroundColor:"#999"
				}, 2000, "linear");
			}
				
