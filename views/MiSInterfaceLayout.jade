// main body
div.mainBody
	div.container
		div.row
			//load either right handed, or left handed
			- if (!handed) var handed = 'left'
			if handed == 'left'
				div.threecol
					div#commands
						// commands
						ul#commandList
				div.ninecol.last
					div#bodyContent
						block interfaceContent
			else
				div.ninecol
					div#bodyContent
						block interfaceContent
				div.threecol.last
					div#commands
						// commands
						ul#commandList